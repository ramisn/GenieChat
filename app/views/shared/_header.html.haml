%header.navbar.navbar-fixed-top{role: 'banner'}
  .container
    .navbar-header
      = link_to root_path, class: 'navbar-brand', target: '_self' do
        %i.fa.fa-comment
        GenieChat
        / %small.text-success alpha
    - if user_signed_in?
      %nav.collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle.clickable{data: {toggle: 'dropdown'}}
              = image_tag current_user.avatar_url, width: 22
              = current_user.name
              %b.caret

            %ul.dropdown-menu{role: 'menu'}
              %li
                = link_to destroy_user_session_path, method: 'delete', target: '_self' do
                  %i.fa.fa-power-off
                  Logout